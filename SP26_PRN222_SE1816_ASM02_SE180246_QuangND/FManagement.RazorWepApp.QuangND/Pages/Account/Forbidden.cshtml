@page
@model FManagement.RazorWepApp.QuangND.Pages.Account.ForbiddenModel
@{
    ViewData["Title"] = "Forbidden";
}

<style>
    .forbidden-container {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .forbidden-content {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 600px;
    }

    .forbidden-icon {
        font-size: 5rem;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .forbidden-title {
        color: #dc3545;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .forbidden-message {
        color: #dc3545;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .forbidden-contact {
        color: #17a2b8;
        margin-bottom: 2rem;
        font-size: 1rem;
    }

    .btn-login {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.75rem 2.5rem;
        border-radius: 25px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        font-size: 1rem;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        color: white;
    }

    .btn-login i {
        font-size: 1.2rem;
    }
</style>

<div class="forbidden-container">
    <div class="forbidden-content">
        <div class="forbidden-icon">
            <i class="fas fa-ban"></i>
        </div>
        <h3 class="forbidden-title">Forbidden</h3>
        <h4 class="forbidden-message">You do not have permission to do this function!</h4>
        <div class="forbidden-contact">Please contact to VuLNS@fe.edu.vn - 091 642 3938</div>
        <a asp-page="/Account/Login" class="btn-login">
            <i class="fas fa-sign-in-alt"></i>
            Back to Login
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
